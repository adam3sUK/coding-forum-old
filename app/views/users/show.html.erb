<% content_for :head do %>
  - <%= @user.username %>'s profile
<% end %>


<ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
  <li class="nav-item" role="presentation">
    <button class="nav-link active" id="pills-home-tab" data-bs-toggle="pill" data-bs-target="#pills-home" type="button" role="tab" aria-controls="pills-home" aria-selected="true">Profile</button>
  </li>
  <li class="nav-item" role="presentation">
    <button class="nav-link" id="pills-posts-tab" data-bs-toggle="pill" data-bs-target="#pills-posts" type="button" role="tab" aria-controls="pills-posts" aria-selected="false">Post History</button>
  </li>
</ul>
<div class="tab-content" id="pills-tabContent">
  <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
    <h1><%= @user.username %></h1>
    <h2>Recent posts</h2>
    <%= render partial: "posts/post-thread", collection: @user.posts, as: :post %>
  </div>
  <div class="tab-pane fade" id="pills-posts" role="tabpanel" aria-labelledby="pills-posts-tab">
    <h2>Recent posts</h2>
    <%= render partial: "posts/post-thread", collection: @user.posts, as: :post %>
  </div>
</div>





