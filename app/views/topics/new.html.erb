<h1>Create a new thread topic</h1>

<%= form_with model: @topic do |form| %>
  <div class="form form-horizontal">
    <div class="form-group">
      <%= form.label :title %><br>
      <%= form.text_field :title %>
      <% @topic.errors.full_messages_for(:title).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div class="form-group">
      <%= form.label :body %><br>
      <%= form.text_area :body %>
    </div>

    <div class="form-group">
      <%= form.submit %>
    </div>
  </div>
<% end %>
